<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecjtu.flesh">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.ecjtu.flesh.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ecjtu.flesh.ui.activity.MainActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ecjtu.flesh.ui.activity.PageDetailActivity"
            android:exported="true" />
        <activity
            android:name="com.ecjtu.flesh.ui.activity.FullScreenImageActivity"
            android:process=":child"
            android:theme="@style/ImageStatusBarStyle" />

        <activity android:name="com.ecjtu.flesh.ui.activity.AppThemeActivity" />
    </application>

</manifest>