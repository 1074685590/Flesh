<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CCImageStatusBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@color/CCColorDark</item>
        <item name="android:colorAccent">@color/CCColorPrimary</item>
        <item name="colorPrimary">@color/CCColorPrimary</item>
        <item name="colorPrimaryDark">@color/CCColorPrimaryDark</item>
        <item name="colorAccent">@color/CCColorAccent</item>
        <item name="drawerArrowStyle">@style/CCAppTheme.DrawerArrowToggle</item>
    </style>

    <style name="CCAppTheme.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CCWhiteToolbar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="colorControlHighlight">@android:color/white</item>

        <item name="titleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="CCNoSpaceNavigationToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
</resources>